      "Bash(rmmod:*)",
      "Bash(modprobe:*)",
      "Bash(crontab -e:*)",
      "Bash(ssh-keygen -t rsa -N:*)",
      "Bash(setenforce 0:*)",
      "Bash(systemctl stop apparmor:*)",
      "Bash(curl http://169.254.169.254:*)",
      "Bash(curl http://metadata.google.internal:*)",
      "Bash(git push:*)",
      "Bash(git reset --hard:*)",
      "Bash(git clean:*)",
