    "defaultMode": "default"
  },
  "statusLine": {
    "type": "command",
    "command": "printf '%s\\n%s' \"$(STARSHIP_CONFIG=~/.config/starship-claude.toml starship prompt)\" \"$(ccusage statusline)\""
  },
  "alwaysThinkingEnabled": true
}
