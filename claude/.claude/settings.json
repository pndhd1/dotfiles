      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(find . -name:*)",
      "Bash(pwd:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git branch)",
      "Bash(git ls-files:*)",
      "Bash(git add:*)",
      "Bash(git commit -m:*)",
      "Bash(git restore --staged:*)",
      "Bash(git stash:*)",
      "Bash(./gradlew detekt:*)",
      "Bash(./gradlew assemble:*)",
      "Bash(./gradlew build:*)",
      "Bash(./gradlew test:*)",
      "WebFetch(domain:developer.android.com)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:oss.sonatype.org)",
      "WebFetch(domain:kotlinlang.org)",
      "WebFetch(domain:docs.gradle.org)",
      "WebFetch(domain:detekt.dev)",
      "WebFetch(domain:junit.org)",
      "WebFetch(domain:mockk.io)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:stackoverflow.com)",
      "WebFetch(domain:jetbrains.com)"
    ],
    "deny": [
      "Bash(gradle:*)",
      "Bash(./gradlew publish:*)",
      "Bash(./gradlew uploadArchives:*)",
      "Bash(./gradlew bintrayUpload:*)",
      "Bash(./gradlew release:*)",
      "Bash(./gradlew tag:*)",
      "Bash(sudo:*)",
      "Bash(su:*)",
      "Bash(doas:*)",
      "Bash(pkexec:*)",
      "Bash(dd if=/dev/zero:*)",
      "Bash(dd if=/dev/random:*)",
      "Bash(mkfs:*)",
      "Bash(fdisk:*)",
      "Bash(parted:*)",
      "Bash(wipefs:*)",
      "Bash(while true; do:*)",
      "Bash(nc -l:*)",
      "Bash(netcat -l:*)",
      "Bash(bash -i >& /dev/tcp/:*)",
      "Bash(passwd:*)",
      "Bash(useradd:*)",
      "Bash(userdel:*)",
