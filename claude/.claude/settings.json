      "Bash(git switch --discard-changes:*)",
      "Bash(git stash drop:*)",
      "Bash(git stash clear:*)",
      "Bash(git remote set-url:*)",
      "Bash(git remote add:*)",
      "Bash(git remote remove:*)",
      "Bash(git remote rm:*)",
      "Bash(git tag -d:*)",
